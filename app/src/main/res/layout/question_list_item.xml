<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_question_string"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:textColor="#302D2D"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="What is your questionString?" />

            <TextView
                android:id="@+id/text_question_number_of_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_question_string"
                android:textColor="#3E0FCA"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="5 answers" />

            <ImageView
                android:id="@+id/image_question_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_question_string"
                android:layout_alignParentRight="true"
                tools:src="@android:drawable/star_big_on" />

            <TextView
                android:id="@+id/text_question_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_question_user_image"
                android:layout_alignParentRight="true"
                android:textColor="#EA2C7F"
                android:textStyle="bold"
                tools:text="Submitted: 1 Jan 2015" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>
</RelativeLayout>