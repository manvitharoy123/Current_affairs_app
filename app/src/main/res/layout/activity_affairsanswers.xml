<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/email"
    android:orientation="horizontal"
    tools:context="data.example.edunachal.affairsanswers">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvres"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Large Text"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#100F0F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#F8B7D3" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvres2"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:gravity="center_horizontal"
            android:text="Large Text"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#100F0F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#9CD7FA" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvres3"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:text="Large Text"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#100F0F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#EFD3A6" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="357dp"
            android:layout_height="74dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shadow_button_layer_list"
            android:text="Restart"
            android:textColor="#100F0F"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#CBBCF8" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1" />


    </LinearLayout>
</ScrollView>